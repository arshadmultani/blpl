            event.preventDefault();
            document.getElementById('contentSRF').style.display = 'block';
            document.getElementById('contentTRF').style.display = 'none';
            document.getElementById('contentForm').style.display = 'none';
        });

        document.getElementById('btnForm').addEventListener('click', function (event) {
            event.preventDefault();
            document.getElementById('contentForm').style.display = 'block';
            document.getElementById('contentSRF').style.display = 'none';
            document.getElementById('contentTRF').style.display = 'none';
        });

        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('contentTRF').style.display = 'block';  // Show TRF content
            document.getElementById('contentSRF').style.display = 'none';   // Hide SRF content
