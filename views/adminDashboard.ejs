        }

        .status-pending {
            background: #BED2FB;
            padding: 2px 20px 2px 20px;
            border-radius: 100px;
            width: fit-content;
            text-transform: capitalize;

        }

        .status-accepted {
            background: green;
            padding: 2px 20px 2px 20px;
            border-radius: 100px;
            text-transform: capitalize;
            width: fit-content;
        }

        .status-declined {
            background: red;
            text-transform: capitalize;
            padding: 2px 20px 2px 20px;
            border-radius: 100px;
            width: fit-content;
        }

        .right-side {
            text-align: center;
        }

        .hero {
            width: 100%;
            height: 250px;
            background: #2969F2;


        }

        .EM strong {
            display: flex;
            text-align: left;
            font-size: 15px;

        }
    </style>
</head>

