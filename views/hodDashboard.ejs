                                    <div><strong>Status:</strong> <%= item.status %></div>
                                    <% if (item.decision) { %>
                                        <div><strong>Decision:</strong> <%= item.decision %></div>
                                    <% } %>
                                </div>
                            </li>
                        <% }) %>
