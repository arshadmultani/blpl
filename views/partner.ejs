    <title>Popup Contact Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        /* The Modal (background) */
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        /* Modal Content */
        .modal-content {
            background-color: #f9f9f9;
            margin: 15% auto; /* 15% from the top and centered */
            padding: 20px;
            border: 1px solid #888;
            width: 80%; /* Could be more or less, depending on screen size */
            max-width: 500px;
            border-radius: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>

    

    <!-- The Modal -->
    <div class="modal" id="contactFormModal">
        <div class="modal-content">
            <span class="close" id="closeFormBtn">&times;</span>
            <h3 style="color: #103C63;" class="sec2frmtitle">Want to Know More?? Drop Us a Mail</h3>
                 <!-- Form -->
                 <form id="contactForm4" method="POST" action="/clients">
                    <div class="clearfix">
                        <input type="text" name="name" placeholder="Your Name*" id="name"
                            class="form-control" required>
                    </div>
                    <div class="clearfix">
                        <input type="text" placeholder="Phone Number*" id="mobileNo"
                            name="mobileNo" class="form-control" required>
                    </div>
                    <div class="clearfix">
                        <textarea class="form-control" name="message" id="message"
                            placeholder="Your message here..." required></textarea>
                    </div>
                    <button type="submit"
                        style="padding: 10px 20px; background:rgb(107, 204, 107); color:#fff; border-radius: 4px; border:none;">Submit</button>
                </form>
                <script>
                    // Listen for form submission to log all data
                    document.getElementById('contactForm4').addEventListener('submit', function(event) {
                        event.preventDefault(); // Prevent actual form submission
                        
                        const name = document.getElementById('name').value.trim();
                        const mobileNo = document.getElementById('mobileNo').value.trim();
                        const message = document.getElementById('message').value.trim();
                        
                        console.log("Form Submitted");
                        console.log("Name:", name);
                        console.log("Mobile Number:", mobileNo);
                        console.log("Message:", message);
                        
                        // Example of sending the data to a server using fetch
                        fetch('/clients', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ name, mobileNo, message })
                        })
                        .then(response => {
                            if (response.ok) {
                                alert('Form submitted successfully!');
                                // Reset form fields
                                document.getElementById('contactForm4').reset();
                            } else {
                                alert('There was a problem with your submission.');
                            }
                        })
                        .catch(error => console.error('Error:', error));
                    });
                </script>
            <script>
                // Get the modal
                const modal = document.getElementById("contactFormModal");

                // Get the button that opens the modal
                const openFormBtn = document.getElementById("openFormBtn");

                // Get the <span> element that closes the modal
                const closeFormBtn = document.getElementById("closeFormBtn");

                // When the user clicks the button, open the modal
                openFormBtn.onclick = function() {
                    modal.style.display = "block";
                }

                // When the user clicks on <span> (x), close the modal
                closeFormBtn.onclick = function() {
                    modal.style.display = "none";
                }

                // When the user clicks anywhere outside of the modal, close it
                window.onclick = function(event) {
                    if (event.target === modal) {
                        modal.style.display = "none";
                    }
                }
            </script>
        </div>
    </div>

</body>
